﻿@model AcunMedyaRestaurantly.Entities.Adres
@{
    ViewBag.Title = "AdresEdit";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Anasayfa</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Adres Bilgisi Güncelleme</a></li>
        </ol>
    </div>
</div>

<div class="container-fluid">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Adres Bilgisi Güncelleme Formu</h4>
                <div class="basic-form">
                    <form method="post">
                        <div class="form-group">
                            @Html.HiddenFor(x => x.AdresId)

                            <label>Konum</label>
                            @Html.TextBoxFor(x => x.Location, new { @class = "form-control" })

                            <label>Çalışma Saatleri</label>
                            @Html.TextBoxFor(x => x.OpenHours, new { @class = "form-control" })

                            <label>Email</label>
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })

                            <label>Telefon</label>
                            @Html.TextBoxFor(x => x.Call, new { @class = "form-control" })

                        </div>
                        <button type="submit" class="btn btn-dark gradient-2">Adres Bilgisi Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>