﻿@model List<AcunMedyaRestaurantly.Entities.Service>
@{
    ViewBag.Title = "ServiceList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    var count = 0;
}

<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Anasayfa</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Sunulan Hizmetlerin Listesi</a></li>
        </ol>
    </div>
</div>
<!-- row -->


<div class="container-fluid">
    <div class="row">

        <!-- /# column -->
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="card-title">
                        <h4>Sunulan Hizmetlerin Listesi</h4>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Başlık</th>
                                    <th>Açıklama</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.Title</td>
                                        <td>@item.Description</td>
                                        <td>
                                            <a href="/Service/ServiceDelete/@item.ServiceId" class="btn btn-info gradient-2">
                                                <i class="fa fa-close" color-muted m-r-5></i>
                                                Sil
                                            </a>
                                        </td>
                                        <td>
                                            <a href="/Service/ServiceEdit/@item.ServiceId" class="btn btn-info gradient-6">
                                                <i class="fa fa-edit" color-muted m-r-5></i>
                                                Güncelle
                                            </a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                        <a href="/Service/ServiceCreate" class="btn btn-outline-success">Yeni Hizmet Bilgisi Ekle</a>
                    </div>
                </div>
            </div>
        </div>
        <!-- /# column -->
    </div>
</div>